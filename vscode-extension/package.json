{
  "name": "supremepower",
  "displayName": "SupremePower",
  "description": "Active workflow engine for coding agents",
  "version": "0.1.0",
  "publisher": "supremepower",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:supremepower-workflow"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "supremepower",
          "title": "SupremePower",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "views": {
      "supremepower": [
        {
          "id": "supremepower-workflow",
          "name": "Active Workflow"
        }
      ]
    },
    "commands": [
      {
        "command": "supremepower.nextStep",
        "title": "SP: Next Step",
        "category": "SupremePower"
      },
      {
        "command": "supremepower.previousStep",
        "title": "SP: Previous Step",
        "category": "SupremePower"
      },
      {
        "command": "supremepower.startSkill",
        "title": "SP: Start Skill...",
        "category": "SupremePower"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.80.0",
    "@types/node": "18.x",
    "typescript": "^5.1.3",
    "eslint": "^8.41.0",
    "@typescript-eslint/eslint-plugin": "^5.59.7",
    "@typescript-eslint/parser": "^5.59.7",
    "@vscode/test-electron": "^2.3.2"
  }
}
